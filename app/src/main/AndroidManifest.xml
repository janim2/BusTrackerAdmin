<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sergeherkul.bustrackeradmin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Add_driver"
            android:parentActivityName=".Driver_Details"></activity>
        <activity
            android:name=".Driver_Details"
            android:parentActivityName=".Registered_Drivers" />
        <activity
            android:name=".Registered_Drivers"
            android:parentActivityName=".Admin_MainActivity" />
        <activity
            android:name=".Login_Selector"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Admin_Profile"
            android:parentActivityName=".Admin_MainActivity" />
        <activity
            android:name=".Verify_School"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterSchool"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Admin_Login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Notifications"
            android:parentActivityName=".MapsActivity" />
        <activity
            android:name=".Driver_Profile"
            android:parentActivityName=".MapsActivity" />
        <activity
            android:name=".Driver_Verification"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Enter_phone_number"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Phone_number_Verification"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Driver_Login" />
        <activity android:name=".MapsActivity"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".Admin_MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>