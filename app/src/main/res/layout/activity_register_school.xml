<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".RegisterSchool">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:id="@+id/back"
                android:src="@drawable/back"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimaryDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coupon code"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/main_blue"
                android:background="@android:color/white"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code? This helps us confirm that the school you are registering exists.\nCode is needed to continue"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@android:color/white"
                android:layout_gravity="center"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter coupon here"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:inputType="text"
                android:id="@+id/coupon_code_editText"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/colorPrimary"
                android:background="@android:drawable/editbox_background"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:text="Request coupon code"
                android:gravity="right"
                android:layout_marginBottom="43dp"
                android:id="@+id/request_coupon_code"
                android:textColor="@color/main_blue"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School Details"
                android:textSize="12sp"
                android:paddingLeft="10dp"
                android:id="@+id/school_details_text"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:background="@android:color/white"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:enabled="false"
                android:hint="Code"
                android:id="@+id/school_code"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:layout_marginTop="30dp"
                android:background="@android:drawable/editbox_background"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is your school code. Note it down for future reference"
                android:textSize="12sp"
                android:id="@+id/school_code_check"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Name"
                android:id="@+id/school_name"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/colorPrimary"
                android:background="@android:drawable/editbox_background"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Address"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:id="@+id/school_address"
                android:inputType="textPostalAddress"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/colorPrimary"
                android:background="@android:drawable/editbox_background"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Phone Number"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:inputType="phone"
                android:id="@+id/school_phone_number"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/colorPrimary"
                android:background="@android:drawable/editbox_background"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Email"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:inputType="textEmailAddress"
                android:id="@+id/school_email"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/colorPrimary"
                android:background="@android:drawable/editbox_background"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Password"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:inputType="textPassword"
                android:id="@+id/passcode"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/colorPrimary"
                android:background="@android:drawable/editbox_background"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Confirm Password"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:inputType="textPassword"
                android:id="@+id/confirm_passcode"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="80dp"
                android:background="@android:drawable/editbox_background"/>
            <!--android:layout_marginBottom="80dp"-->


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Success"
                android:layout_marginBottom="80dp"
                android:id="@+id/success_message"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="-60dp"
                android:textSize="13sp"/>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/loading"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:text="DONE"
        android:id="@+id/done_button"
        android:layout_gravity="bottom"
        android:textColor="@android:color/white"
        android:textSize="13sp"/>

</FrameLayout>