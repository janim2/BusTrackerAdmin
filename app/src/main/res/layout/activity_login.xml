<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Admin_Login">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back_white"
        android:id="@+id/go_back"
        android:layout_gravity="left|top"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAFET ADMIN"
            android:textSize="16sp"
            android:id="@+id/logo_name"
            android:textColor="@android:color/white"
            android:gravity="center"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login to get started"
            android:textSize="17sp"
            android:padding="20dp"
            android:id="@+id/login_text"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/number_layout"
            android:layout_marginTop="70dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:inputType="textEmailAddress"
                        android:id="@+id/school_email"
                        android:background="@android:drawable/editbox_background"
                        android:hint="School Email"/>
                </android.support.design.widget.TextInputLayout>



                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:inputType="textPassword"
                        android:id="@+id/password"
                        android:background="@android:drawable/editbox_background"
                        android:hint="Password"/>
                </android.support.design.widget.TextInputLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="LOGIN"
                        android:id="@+id/forward"
                        android:textColor="@color/white"
                        android:background="@drawable/curved_corners"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/forgot_password"
                        android:textColor="@android:color/black"
                        android:text="Forgot Password?"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Success"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:id="@+id/success_message"
                    />

            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="230dp"-->
        <!--android:layout_gravity="bottom"-->
        <!--android:padding="20dp"-->
        <!--android:orientation="vertical"-->
        <!--android:background="@drawable/curved_top_admin">-->

    <!--</LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/register_text"
            android:textColor="@color/white"
            android:text="Register School"/>

    </LinearLayout>
</FrameLayout>