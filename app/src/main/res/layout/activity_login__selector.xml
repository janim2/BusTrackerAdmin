<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:gravity="center"
            android:id="@+id/user_selection_text"
            android:text="Select Safet User Category to continue"/>


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <RadioButton
                android:id="@+id/driver_radio_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:button="@android:color/transparent"
                android:checked="true"
                android:padding="8dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black"
                android:text="DRIVER" />

            <RadioButton
                android:id="@+id/school_admin_radio_button"
                android:layout_width="200dp"
                android:layout_marginTop="20dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/button_background"
                android:button="@android:color/transparent"
                android:checked="true"
                android:layout_gravity="center"
                android:padding="8dp"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:text="SCHOOL ADMINSTRATOR" />

        </RadioGroup>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:text="NEXT"
        android:id="@+id/next_button"
        android:textColor="@android:color/white"/>




</FrameLayout>