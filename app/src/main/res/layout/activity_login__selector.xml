<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Selector">
    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="150dp"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:src="@drawable/feature_image"-->
        <!--android:layout_gravity="top|center"/>-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_margin="20dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/main_blue"
                android:textSize="15sp"
                android:gravity="center"
                android:id="@+id/user_selection_text"
                android:text="Select Safet User Category to continue"/>


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <RadioButton
                    android:id="@+id/driver_radio_button"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_background"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:padding="8dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="13sp"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/black"
                    android:text="DRIVER" />

                <RadioButton
                    android:id="@+id/school_admin_radio_button"
                    android:layout_width="200dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:background="@drawable/button_background"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:text="SCHOOL ADMINSTRATOR" />

            </RadioGroup>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:text="NEXT"
        android:id="@+id/next_button"
        android:textColor="@android:color/white"/>
</FrameLayout>